datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Klant {
  id                        Int @id @default(autoincrement())
  naam                      String
  adres                     String
  postcode                  String
  woonplaats                String
  taken                     Taak[]
}

model Taak {
  id                        Int @id @default(autoincrement())
  taak                      String
  extra                     String?
  klanten                   Klant[]
}

model User {
  id                        Int @id @default(autoincrement())
  name                      String?
  email                     String @unique
  hashedPassword            String
  salt                      String
  resetToken                String?
  resetTokenExpiresAt       DateTime?
}



