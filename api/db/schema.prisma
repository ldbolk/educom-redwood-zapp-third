datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Klant {
  id                        Int @id @default(autoincrement())
  naam                      String
  adres                     String
  postcode                  String
  woonplaats                String
  taken                     Taak[]
  bezoeken                  Bezoek[]
}

model Taak {
  id                        Int @id @default(autoincrement())
  taak                      String
  extra                     String?
  klanten                   Klant[]
  bezoeken                  Bezoek[]
}

model User {
  id                        Int @id @default(autoincrement())
  name                      String?
  email                     String @unique
  hashedPassword            String
  salt                      String
  resetToken                String?
  resetTokenExpiresAt       DateTime?
  bezoeken                  Bezoek[]
}

model Bezoek {
  id                        Int @id @default(autoincrement())
  klantId                   Int
  userId                    Int
  klant                     Klant @relation(fields:[klantId], references: [id])
  medewerker                User @relation(fields:[userId], references: [id])
  taken                     Taak @relation(fields:[taken], references: [id])
  takenLijst                Taak[]
  start                     DateTime
  end                       DateTime


}

